{
    "name": "messenger/people",
    "description": "MessengerPeople home task",
    "type": "project",
    "require": {
        "php": "8.1.*",
        "ext-http": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3.10"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Messenger\\People\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Messenger\\People\\Test\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "test": [
            "phpunit --configuration phpunit.xml"
        ]
    }
}
